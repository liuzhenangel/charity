<div class='home-img'>
  <%= image_tag('home.jpg', width: '100%', height: '1280px') %>
</div>
<ul class='rig columns-3'>
  <% @articles.each do |article| %>
    <li class='border'>
      <div class='boxshaddow'>
        <%= image_tag(article.main_photo.image.url, class: 'rig-img') %>
      </div>
      <div class='article-wrapper'>
        <%= link_to article.title, article, class: 'article-title' %>
        <p class='article-data'><%= article.data_time %></p>
      </div>
    </li>
  <% end %>
</ul>
