<div class='container'>
  <h2 class='article-new'>编辑博客</h2>
  <%= form_for @article, url: admin_post_path, method: :patch do |f| %>
    <p class='article-title'>
  <%= f.label '标题' %><br>
  <%= f.text_field :title %>
  </p>
  <div class="tabbable tabs-left">
    <ul class="nav nav-tabs">
      <li class='content-title active'><%= link_to '内容', '#' %></li>
      <li class="preview-title"><%= link_to '预览', '#' %></li>
      <a href="#" class='pull-right' id="upload-photo">插入图片</a>
      <input type='file' class='file-window'>
    </ul>
    <%= f.text_area :content %>
    <div class='markdown-body'></div>
  </div>
  <p>
  <%= f.submit '发表' %>
  </p>
<% end %>
</div>
